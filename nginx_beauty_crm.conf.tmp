# Редирект с HTTP на HTTPS
server {
    listen 80;
    server_name mlediamant.com www.mlediamant.com;
    return 301 https://$host$request_uri;
}

# Основной HTTPS сервер
server {
    listen 443 ssl http2;
    server_name mlediamant.com www.mlediamant.com;

    ssl_certificate /etc/letsencrypt/live/mlediamant.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mlediamant.com/privkey.pem;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;

    # Gzip settings
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml;

    # API эндпоинты
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Публичные эндпоинты
    location /public/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Instagram webhooks
    location /webhook {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 120s;
        proxy_connect_timeout 10s;
    }

    # Прокси для изображений Instagram
    location /proxy/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ⭐ СТАТИКА КАРТИНКИ (МГНОВЕННОЕ ОБНОВЛЕНИЕ)
    location /static/ {
        alias /home/ubuntu/beauty_crm/backend/static/;
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate, proxy-revalidate, max-age=0";
        access_log off;
    }

    # Кэширование для хешированных файлов Vite (js, css)
    location ~* ^/(js|css|fonts)/.+\.(js|css|woff2?|ttf|eot)$ {
        root /home/ubuntu/beauty_crm/frontend/dist;
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Изображения фронтенда (также без кэша для мгновенного обновления если меняются)
    location ~* ^/images/.+\.(png|jpg|jpeg|gif|ico|svg|webp)$ {
        root /home/ubuntu/beauty_crm/frontend/dist;
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate, proxy-revalidate, max-age=0";
        access_log off;
    }

    # Остальная статика фронтенда
    location = /favicon.ico {
        alias /home/ubuntu/beauty_crm/frontend/dist/favicon.svg;
        expires 30d;
        add_header Content-Type image/svg+xml;
    }

    location ~* \.(ico|png|svg|txt)$ {
        root /home/ubuntu/beauty_crm/frontend/dist;
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate, proxy-revalidate, max-age=0";
        access_log off;
    }

    # Все остальное - React SPA (НИКОГДА НЕ КЭШИРОВАТЬ)
    location / {
        root /home/ubuntu/beauty_crm/frontend/dist;
        try_files $uri /index.html;
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate, proxy-revalidate, max-age=0";
    }
}
